.container {
  padding: 20rpx;
}

.header {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.location-info {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  color: #666;
}

.description {
  margin: 20rpx 0;
}

.description textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
}

.image-section {
  margin: 20rpx 0;
}

.image-section image {
  width: 100%;
  max-height: 400rpx;
  margin-bottom: 20rpx;
}

.actions {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.actions button {
  flex: 1;
}